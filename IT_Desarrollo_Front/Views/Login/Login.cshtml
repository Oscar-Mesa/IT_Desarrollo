@model Login

<link href="~/css/StyleLogin.css" rel="stylesheet" />

<div class="container-fluid container-full-height d-flex flex-column">
    <div class="row flex-fill row-cols-2 ">
        <div class="col-5" style="background-color: #a3c4b7; display: flex; justify-content: center; align-items: center; overflow: hidden;">
            <img src="~/img/img_login.png" alt="imagen abstracta" style="width: 100%; height: auto; object-fit: cover;" />
        </div>
        <div class="col-7 d-flex justify-content-center align-items-center" style="background-color: #ffffff; height: 100vh;">
            <div style="width: 100%; max-width: 400px;">
                <form asp-action="Login" asp-controller="Login" method="post">
                    <div class="form-group">
                        <label for="email">Correo</label>
                        <input name="email" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="contrasena">Contraseña</label>
                        <input name="contrasena" type="password" class="form-control" />
                    </div>
                    <p>@ViewBag.Mensaje</p>

                    <button type="submit" class="btn-iniciar">Iniciar sesión</button>
                </form>
                <div class="form-group d-flex align-items-center mt-4">
                    <label class="mb-0">¿No tienes cuenta?</label>
                    <a class="nav-registro p-2" asp-area="" asp-controller="Registro" asp-action="Registro">Regístrate aquí</a>
                </div>
            </div>
        </div>
    </div>
</div>



